<Window x:Class="PlayMartWpf.AlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlayMartWpf"
        mc:Ignorable="d"
        Title="AlertWindow" Height="480" Width="600" Loaded="Window_Loaded" AllowsTransparency="True" WindowStyle="None" Background="Transparent">
    <Grid >

        <Rectangle Fill="#FFB3B3FF" Stroke="Transparent" RadiusY="23.5" RadiusX="23.5" />
        <Rectangle Fill="#FFFFE7B3" Stroke="Transparent" RadiusY="23.5" RadiusX="23.5" Margin="10" />
        
        <StackPanel x:Name="Panel" Margin="20" VerticalAlignment="Center">
            <TextBox x:Name="label" TextWrapping="Wrap" Text="" FontSize="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Transparent" BorderBrush="#00ABADB3" FontWeight="Bold" IsReadOnly="True"/>

        </StackPanel>
    </Grid>
</Window>
